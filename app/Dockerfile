# Используем официальный образ Node.js с тегом alpine
FROM node:alpine

# Устанавливаем необходимые зависимости приложения
RUN npm install -g http-server

# Копируем исходный код приложения в рабочую папку
COPY app.js /app/

# Указываем рабочую папку для приложения
WORKDIR /app

# Указываем какой порт будет задействован
EXPOSE 8000

# Запускаем приложение
CMD [ "node", "app.js" ]